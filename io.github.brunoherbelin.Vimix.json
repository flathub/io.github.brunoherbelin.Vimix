{
    "app-id": "io.github.brunoherbelin.Vimix",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "vimix",
    "rename-desktop-file": "vimix.desktop",
    "rename-icon": "vimix",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--device=shm",
        "--device=all",
        "--filesystem=host",
        "--filesystem=/tmp",
        "--talk-name=org.gtk.vfs.*",
        "--env=FREI0R_PATH=/app/lib/frei0r-1"
    ],
    "cleanup": [
        "/include",
        "/share/gdb",
        "/share/info",
        "/share/man",
        "/share/doc",
        "/lib/pkgconfig",
        "*.a"
    ],
    "modules": [
        {
            "name": "glfw",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_SHARED_LIBS=ON",
                "-DGLFW_BUILD_EXAMPLES=OFF",
                "-DGLFW_BUILD_TESTS=OFF",
                "-DGLFW_BUILD_DOCS=OFF"
            ],
            "sources": [
                {
                "type": "git",
                "tag": "3.3.9",
                "commit": "e2c92645460f680fd272fd2eed591efb2be7dc31",
                "url": "https://github.com/glfw/glfw.git"
                }
            ]
        },
        {
            "name": "x264",
            "config-opts": [
                "--enable-shared"
            ],
            "sources": [
            {
                "type": "git",
                "commit": "c1c9931dc87289b8aeba78150467f17bdb97d019",
                "url": "https://code.videolan.org/videolan/x264.git"
            }
            ]
        },
        {
            "name": "x265",
            "buildsystem": "cmake-ninja",
            "subdir": "source",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_POSITION_INDEPENDENT_CODE=ON"
            ],
            "sources": [
            {
                "type": "git",
                "tag": "3.5",
                "url": "https://bitbucket.org/multicoreware/x265_git.git"
            }
            ]
        },
        {
            "name": "srt",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DENABLE_APPS=OFF",
                "-DENABLE_STDCXX_SYNC=ON"
            ],
            "sources": [
            {
                "type": "git",
                "tag": "v1.5.3",
                "commit": "09f35c0f1743e23f514cb41444504a7faeacf89e",
                "url": "https://github.com/Haivision/srt.git"
            }
            ]
        },
        {
            "name": "frei0r",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
            {
                "type": "git",
                "tag": "v2.3.1",
                "commit": "49f759d9e153a4e2850127e368f7aa6f40d59aaf",
                "url": "https://github.com/dyne/frei0r.git"
            }
            ]
        },
        {
            "name": "gstreamer",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
               "-Ddoc=disabled",
               "-Dpython=disabled",
               "-Dges=disabled",
               "-Drs=disabled",
               "-Dgst-examples=disabled",
               "-Drtsp_server=disabled",
               "-Ddevtools=disabled",
               "-Dqt5=disabled",
               "-Dlibav=enabled",
               "-Dbase=enabled",
               "-Dgood=enabled",
               "-Dgst-plugins-good:v4l2=enabled",
               "-Dgpl=enabled",
               "-Dbad=enabled",
               "-Dgst-plugins-bad:x265=enabled",
               "-Dgst-plugins-bad:srt=enabled",
               "-Dgst-plugins-bad:shm=enabled",
               "-Dugly=enabled",
               "-Dgst-plugins-ugly:x264=enabled",
               "-Dvaapi=enabled"
            ],
            "sources": [
              {
                "type": "git",
                "tag": "1.22.8",
                "commit": "4af14db10e8355f980bbf79733af004e59d255fc",
                "url": "https://gitlab.freedesktop.org/gstreamer/gstreamer.git",
                "disable-submodules": false
              }
            ]
        },
        {
            "name": "shmdata",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DWITH_PYTHON=OFF",
                "-DWITH_SDFLOW=OFF",
                "-DWITH_SDCRASH=OFF",
                "-DWITH_GST=ON"
            ],
            "sources": [
            {
                "type": "git",
                "tag": "1.3.73",
                "commit": "309d657fde6ac3493b0f857facd2c5e3356cb1e1",
                "url": "https://gitlab.com/sat-mtl/tools/shmdata.git"
            }
            ]
        },
        {
            "name": "vimix",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "git",
                    "tag": "0.8.2d",
                    "commit": "5532e3349a1c63c9b5e282b716a78b9837b345ff",
                    "url": "https://github.com/brunoherbelin/vimix.git"
                }
            ]
        }
    ]
}
